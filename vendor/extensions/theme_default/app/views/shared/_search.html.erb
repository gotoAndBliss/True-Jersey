<div class="search_form">
  <div class="red_button_left"></div>
  <div class="red_button_bg">
    <% form_tag products_url, :method => :get do %>
      <%= text_field_tag :keywords, params[:keywords] %>
      <%= submit_tag t(:search), :name => nil, :class => "search_button" %>
    <% end %>
  </div>
  <div class="red_button_right"></div>
</div>