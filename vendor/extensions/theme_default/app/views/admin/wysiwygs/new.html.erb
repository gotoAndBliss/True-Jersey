<%= javascript_include_tag :ckeditor %>
<div id="content" class="with-sidebar clear">
  <br />
  <%- if @wysiwyg.name == "storeloc" %>
    <h2>Store Location</h2>
  <%- elsif @wysiwyg.name == "faq" %>  
    <h2>FAQ</h2>
  <%- elsif @wysiwyg.name == "about" %>
    <h2>About</h2>
  <%- elsif @wysiwyg.name == "shipping" %>
    <h2>Shipping Prices</h2>
  <%- elsif @wysiwyg.name == "size" %>
    <h2>Sizes</h2>
  <%- elsif @wysiwyg.name.match(/box/)%>
    <h2><%= @wysiwyg.name %></h2>
  <% end %>
  <br />
  <% form_for(@wysiwyg, :url => admin_wysiwygs_path, :html => { :method => :post}) do |f| %>
    <%= f.hidden_field :name, :value => params[:name] %>
    <%- if params[:name].match(/box/) != nil %>
      <%= f.cktext_area(:content, :width => '190px', :height => '317px') %>
    <%- else %>
      <%= f.cktext_area(:content, :width => '100%', :height => '200px') %>
    <% end %>
    <%= f.submit %>
  <% end -%>

  <%= render :partial => 'sidenav' %>
</div>




