<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<% hook :inside_head do %>
  <%= render :partial => 'shared/head'%>
<% end %>
</head>
<%
if @body_class.nil?
  if @content_for_sidebar
    @body_class = 'two-col'
  else
    @body_class = 'one-col'
  end
end
 %>
<body class="<%= @body_class %>"<%= %( id="#{@body_id}") if @body_id %>>
  <div id="header" class="container">
    <div id="header-wrapper">      
      <div class="logo-and-search">                                                  
      	<%= logo %>
      	<%= render 'shared/search' %>
    	</div>
      <div id="login-bar">         
        <ul id="nav-bar">
          <%= render 'shared/nav_bar' %>
        </ul>
        <ul id="main-nav">
          <li class="mens"><%= link_to '', '/t/mens/'%></li>
          <li class="ladies"><%= link_to '', '/t/ladies/'%></li>
          <li class="kids"><%= link_to '', '/t/kids/'%></li>
          <li class="hoodies"><%= link_to '', '/t/hoodies/'%></li>
          <li class="accessories"><%= link_to '', '/t/accessories/'%></li>
          <li class="stickers"><%= link_to '', '/t/stickers/'%></li>
        </ul>
      </div>
    </div>
  </div>
  <div id="wrapper" class="container"> 
    <% if @content_for_sidebar %>
    <div id="sidebar">
      <% hook :sidebar do %>
        <%= yield :sidebar %>
      <% end %>
    </div>
    <% end %>
    <div id="content-wrapper">

      <div id="content-sans-bg">
        <%-# breadcrumbs(@taxon) if @taxon %>
        <% if flash[:notice] %>
        <div class="taxon-left"></div>
        <div class="taxon-middle"><h1 style="color: #fff;"><%= flash[:notice] %></h1></div>
        <div class="taxon-right"></div>
        <% end %>
        <div class="clear"></div>
        <% if flash[:error] %>
        <div class="flash errors"><%= flash[:error] %></div>
        <% end %>
        <%= yield %>
      </div>
      <div class="clear"></div>

    </div>
    <%= render :partial => 'shared/footer'%>
  </div>
</body>
</html>